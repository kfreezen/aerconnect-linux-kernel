#include "imx6qdl-ts4900.dtsi"
#include <dt-bindings/interrupt-controller/irq.h>

/ {
	aliases {
		ethernet0 = &fec;
		ethernet1 = &usbeth;
		mxcfb0 = &mxcfb0;
		/*i2c3 = &adc_i2c;*/
	};

#if 0
	adc_i2c: adc-i2c {
		compatible = "i2c-gpio";
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_anamux>;
